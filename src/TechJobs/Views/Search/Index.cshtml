<h1>@ViewBag.title</h1>

<form action="/Search/Results">
    <h2>Search by:</h2>
    @{ 
        string lastSearch = "all";
        if (ViewData.ContainsKey("SearchType"))
        {
            lastSearch = (string)(ViewData["SearchType"]);
        }
   
     }
    <p>
        @foreach (KeyValuePair<string, string> column in ViewBag.columns)
        {
            bool isChecked = column.Key == lastSearch;
            <span>
                <input type="radio"
                       name="searchType"
                       id="@column.Key"
                       value="@column.Key"
                       checked=@isChecked />
                <label for="@column.Key">@column.Value</label>
            </span>
        }
    </p>

    <p>
        <label for="searchTerm">Keyword:</label>
        @if (ViewData.ContainsKey("SearchTerm"))
        {
            <input type="text" name="searchTerm" id="searchTerm" value=@ViewData["SearchTerm"] />
        }
        else
        {
           <input type="text" name="searchTerm" id="searchTerm" />
        }
    </p>

    <input type="submit" value="Search" />
</form>

<hr />

@if (ViewBag.jobs != null)
{

    <h3>@ViewBag.jobs.Count Result(s)</h3>
    
        // TODO #2 - Loop over jobs dictionary and display all job fields
        @foreach (Dictionary<string, string> job in ViewBag.jobs)
        {
            <p>
                <table class="job-listing">                   

                    @foreach (KeyValuePair<string, string> kvp in job)
                    {
                        char[] carray = kvp.Key.ToCharArray();
                        if (carray.Length >= 1)
                        {
                            carray[0] = char.ToUpper(carray[0]);
                        }
                        for (int i = 1; i < carray.Length; i++)
                        {
                            if (carray[i-1] == ' ')
                            {
                                carray[i] = char.ToUpper(carray[i]);
                            }
                        }
                        string name = new string(carray);

                    <tr>
                        <td><b>@name</b></td>
                        @if (kvp.Key == "name")
                        {
                            <td>@kvp.Value</td>
                        }
                        else
                        {
                            <td><a asp-controller="List" asp-action="Jobs" asp-route-column="@kvp.Key" asp-route-value="@kvp.Value">@kvp.Value</a></td>
                        }


                    </tr>

                    }

                </table>
            </p>
            
        }
}